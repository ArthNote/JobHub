<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/recruiter_jobs_row_linearlayout"
    android:layout_marginHorizontal="12dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="16dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:minWidth="50dp"
                    android:minHeight="50dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/c1"
                    android:layout_marginLeft="5dp"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:paddingLeft="15dp">

                    <TextView
                        android:id="@+id/recruiter_jobs_row_jname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Sofware Engineer"
                        android:textColor="@color/dark_blue"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:id="@+id/recruiter_jobs_row_company_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Microsoft â€¢ Casablanca"
                            android:textColor="@color/black_new"
                            android:textSize="14sp"
                            android:layout_weight="1"/>

                    </LinearLayout>
                </LinearLayout>




            </LinearLayout>
            <LinearLayout
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/job_thingy_box"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="5dp"
                    android:layout_marginHorizontal="5dp">
                    <TextView
                        android:id="@+id/recruiter_jobs_row_worktime"
                        android:layout_width="match_parent"
                        android:textColor="@color/black_new"
                        android:layout_height="match_parent"
                        android:text="Full Time" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/job_thingy_box"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="5dp"
                    android:layout_marginHorizontal="5dp">
                    <TextView
                        android:id="@+id/recruiter_jobs_row_exp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black_new"
                        android:text="Programing"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/job_thingy_box"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="5dp"
                    android:layout_marginHorizontal="5dp">
                    <TextView
                        android:id="@+id/recruiter_jobs_row_worktype"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black_new"
                        android:text="Remote"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:layout_marginTop="16dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/applicants" />
                <TextView
                    android:id="@+id/recruiter_jobs_row_numapp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="51 Applicants"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/black_new"
                    android:fontFamily="@font/poppins_regular"/>
                <TextView
                    android:id="@+id/recruiter_jobs_row_pdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 day ago"
                    android:paddingRight="15dp"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black_new"
                    android:layout_weight="1"/>

            </LinearLayout>
            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="15dp"
                android:layout_marginTop="8dp">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="JOB"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/button_red"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="UNAPPLY"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/button_red"/>
            </LinearLayout>-->

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>